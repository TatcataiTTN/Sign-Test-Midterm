fig, axes = plt.subplots(1, 2, figsize=(12, 5))

# Plot 1: Scatter truoc vs sau
ax1 = axes[0]
ax1.scatter(df['Truoc_kg'], df['Sau_kg'],
            s=100, alpha=0.6)
ax1.plot([75, 100], [75, 100], 'r--',
         label='No change')
ax1.set_xlabel('Can nang Truoc (kg)')
ax1.set_ylabel('Can nang Sau (kg)')
ax1.legend()

# Plot 2: Bar chart hieu so
ax2 = axes[1]
colors = ['green' if x > 0 else 'red'
          for x in df['Hieu_kg']]
ax2.bar(df['ID'], df['Hieu_kg'],
        color=colors, alpha=0.6)
ax2.axhline(0, color='black', lw=2)
ax2.set_xlabel('ID')
ax2.set_ylabel('Hieu so (kg)')

plt.tight_layout()
plt.show()
            \end{lstlisting}
